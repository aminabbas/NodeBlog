<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./inc/head') %>
</head>
<body>
<%- include('./inc/nav') %>
<section>
    <a href = "/admin/add">Add</a>
    <h1>Blogs</h1>
    <ul>
        <% blogs.forEach(blog => { %>
            <li>
                <p><%=blog.title%></p>
                <a class="del" data-doc="<%=blog._id%>">Delete</a>
            </li>
        <% }) %>

    </ul>
</section>
<script>
    const delBtn = document.querySelector('a.del');
    delBtn.addEventListener('click', (event) => {
        const endpoint = `/admin/delete/${delBtn.dataset.doc}`

        fetch(endpoint, {
            method: 'DELETE'
        })
            .then((res) => res.json())
            .then((data) => window.location.href = data.link)
            .catch(err => {
                console.log(err)
            })
    })
</script>
</body>
</html>